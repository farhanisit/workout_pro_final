rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {
    function isOwner(uid) {
      return request.auth != null && request.auth.uid == uid;
    }
    function allowedBodyPart(v) {
      return v in ['chest','back','legs','arms','core','shoulders'];
    }

    match /users/{uid} {
      allow read, write: if isOwner(uid);
    }

    match /exercises/{docId} {
      // Only the owner can create, with normalized fields
      allow create: if isOwner(request.resource.data.userId)
                    && allowedBodyPart(request.resource.data.bodyPart)
                    && request.resource.data.target is int;

      // Only the owner can read/update/delete their document
      allow read, update, delete: if isOwner(resource.data.userId);
    }
  }
}
